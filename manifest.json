{
    "manifest_version": 2,

    "name": "SoundDown",
    "description": "Download Soundcloud songs and edit mp3 metadata",
    "version": "1.0",

    "browser_action": {
        "default_icon": "resources/icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["scripts/jquery.js", "scripts/FileSaver.min.js", "scripts/browser-id3-writer.min.js", "scripts/background.js"]
    },
    "permissions": [
        "activeTab",
        "unlimitedStorage",
        "downloads",
        "downloads.shelf"
    ],
    "web_accessible_resources": [
        "resources/modal.html"
    ],
    "content_scripts": [
        {
            "matches": ["http://*.soundcloud.com/*", "https://*.soundcloud.com/*", "https://api.soundcloud.com/*"],
            "css": ["css/ext-main.css", "css/remodal.css", "css/remodal-default-theme.css"],
            "js": ["scripts/jquery.js", "scripts/remodal.min.js", "scripts/content.js"]
        }
    ]
}