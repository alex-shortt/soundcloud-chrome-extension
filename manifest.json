{
    "manifest_version": 2,

    "name": "Soundcloud Chrome Extension",
    "description": "This will make the souncloud browsing experience much better \n TODO: Add option to hide lisiting, note where you left off,  ",
    "version": "1.0",

    "browser_action": {
        "default_icon": "resources/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "https://*.soundcloud.com/*",
        "https://soundcloud-downloader.herokuapp.com/*"
    ],
    "web_accessible_resources": [
        "/resources/fontawesome-webfont.ttf",
        "/resources/fontawesome-webfont.woff"
    ],
    "content_scripts": [
        {
            "matches": ["http://*.soundcloud.com/*", "https://*.soundcloud.com/*", "https://api.soundcloud.com/*"],
            "css": ["resources/font-awesome.css", "resources/ext-main.css"],
            "js": ["scripts/jquery.js", "scripts/background.js"]
        }
    ]
}